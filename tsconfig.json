{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting (Strict Mode) */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path Mapping (Important!) */
    "baseUrl": ".",
    "paths": {
      "@/*": ["docs/*"] // 假设你的 VitePress 源文件在 docs 目录
    }
  },
  "include": [
    "docs/**/*", // 关键：包含 docs 目录下的所有文件
    "docs/**/*.vue",
    "docs/**/*.ts",
    ".vitepress/**/*" // 包含配置文件
  ]
}
